        <hr>

        <!-- FilterItems -->
    
    
    
    
    <%= form_for :searchItems, url: searchItems_path(:iid) do |f| %>
  
      
      
      <%= f.label  "Price : "  
        %><br>
      
           <input type="text" name ="FPrice" value = "<%=@minPrice%>" >
       <input type="text" name ="TPrice" value = "<%=@maxPrice%>">
           <br>
       
       
       
       <%= f.label  "Nearest : "  
        %><br>
      
       <%@CheckBoxesArray["City"].each do |c| -%>   
          <input name ="City_<%=c%>" type="checkbox" value="<%=c%>" /> <%=c%> <br>        
                      
    <% end %>
    <br>
      
      
      <% count =0 
               @filters.each do |i| %>
        
      
         
      
     
     <% if i.typeOfLabel == "text" %>

           <%= f.label  i.nameOfLabel  
     var = i.nameOfLabel %><br>
     
                   <input type="text" name ="<%=i.nameOfLabel%>" >       
                       <% else %>

               <%= f.label  i.nameOfLabel  
           var = i.nameOfLabel %><br>
     
             
               <%@CheckBoxesArray[var].each do |c| -%>    
          <input name ="<%=i.nameOfLabel%>_<%=c%>" type="checkbox" value="<%=c%>" /> <%=c%> <br>        
                      
    <% end %>
            
            
                       <% end %>
     
      
       
       </br>
             <% 
                  end %>
           
  <p>
    <%= f.submit :Search%>
  </p>
<% end %>
    
    
    
    
    
    
    
    
    
    
    
    
