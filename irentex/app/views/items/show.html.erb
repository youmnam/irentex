<table style="width: 50%">
  <tr>
    <th>Item Name</th>
    <th>Item Description</th>
    <th>Item Price</th>
    <th colspan="3"></th>
  </tr>
  <tr>
      <td><%= @item.item_name %></td>
      <td><%= @item.item_desc %></td>
      <td><%= @item.item_price %></td>

    </tr>
</table>

<table style="width: 50%">
  <tr>
    <th>item images</th>
    <th colspan="3"></th>
  </tr>

  <% @item.item_attachments.all.each do |p| %>
   <tr>
      <td><%= image_tag p.image.thumb.url %></td>
      <td><%= link_to "show original", item_attachment_path(p) %></td>  
      <td><%= link_to "Edit Attachment", edit_item_attachment_path(p) %></td>
    </tr>

      <% end %>
</table>
<%= link_to 'Back', user_path(:id => params[:user_id]) %>